<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="android:background">@color/backgroundBlue</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="textView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/textYellow</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">@color/textRedBackground</item>
    <item name="android:shadowDx">1.8</item>
    <item name="android:shadowDy">1.8</item>
    <item name="android:shadowRadius">2.0</item>
    <item name="android:padding">16sp</item>
  </style>

  <style name="winningHandView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/textYellow</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">@color/textRedBackground</item>
    <item name="android:shadowDx">1.8</item>
    <item name="android:shadowDy">1.8</item>
    <item name="android:shadowRadius">2.0</item>
 f   <item name="android:paddingBottom">0sp</item>
    <item name="android:paddingTop">0sp</item>
  </style>

  <style name="cardStyle">
    <item name="android:layout_width">160sp</item>
    <item name="android:layout_height">240sp</item>
    <item name="android:paddingBottom">24sp</item>
    <item name="android:paddingTop">16sp</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:tint">@color/card</item>
  </style>

</resources>
