<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:background">@color/background_blue</item>
    <item name="android:colorAccent">@color/red</item>
    <item name="android:textColor">@color/yellow</item>
  </style>

  <style name="alert_dialog">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
    <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    <item name="android:textColorPrimary">@color/yellow</item>
  </style>

  <style name="button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/button</item>
  </style>

  <style name="card_style">
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">160dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:tint">@color/card</item>
  </style>

  <style name="change_payout_edit_text">
    <item name="android:inputType">number</item>
    <item name="android:maxLength">5</item>
  </style>

  <style name="small_text_view">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/yellow</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="state_text_view">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/yellow</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">@color/red</item>
    <item name="android:shadowDx">1.8</item>
    <item name="android:shadowDy">1.8</item>
    <item name="android:shadowRadius">2.0</item>
    <item name="android:padding">8dp</item>
  </style>

  <style name="winning_hand_view">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/yellow</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">@color/red</item>
    <item name="android:shadowDx">1.8</item>
    <item name="android:shadowDy">1.8</item>
    <item name="android:shadowRadius">2.0</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:paddingTop">0dp</item>
  </style>

</resources>
