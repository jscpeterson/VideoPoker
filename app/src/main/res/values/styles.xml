<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:background">@color/backgroundBlue</item>
    <item name="android:colorAccent">@color/red</item>
    <item name="android:textColor">@color/yellow</item>
  </style>

  <style name="button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/button</item>
  </style>

  <style name="smallTextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/yellow</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="textView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/yellow</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">@color/red</item>
    <item name="android:shadowDx">1.8</item>
    <item name="android:shadowDy">1.8</item>
    <item name="android:shadowRadius">2.0</item>
    <item name="android:padding">8dp</item>
  </style>

  <style name="winningHandView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/yellow</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">@color/red</item>
    <item name="android:shadowDx">1.8</item>
    <item name="android:shadowDy">1.8</item>
    <item name="android:shadowRadius">2.0</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:paddingTop">0dp</item>
  </style>

  <style name="cardStyle">
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">160dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:tint">@color/card</item>
  </style>

</resources>
