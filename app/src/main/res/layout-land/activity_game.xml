<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">
    <edu.cnm.deepdive.videopoker.controller.CardButton
      android:id="@+id/card1"
      style="@style/cardStyle"/>
    <edu.cnm.deepdive.videopoker.controller.CardButton
      android:id="@+id/card2"
      style="@style/cardStyle"/>
    <edu.cnm.deepdive.videopoker.controller.CardButton
      android:id="@+id/card3"
      style="@style/cardStyle"/>
    <edu.cnm.deepdive.videopoker.controller.CardButton
      android:id="@+id/card4"
      style="@style/cardStyle"/>
    <edu.cnm.deepdive.videopoker.controller.CardButton
      android:id="@+id/card5"
      style="@style/cardStyle"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TextView
      android:id="@+id/win_notifier"
      style="@style/winningHandView"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:gravity="start">
      <TextView
        android:id="@+id/win_view"
        style="@style/textView"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:gravity="center">
      <TextView
        android:id="@+id/bet_view"
        style="@style/textView"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:gravity="end">
      <TextView
        android:id="@+id/purse_view"
        style="@style/textView"/>
    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="bottom|center_horizontal">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:gravity="start">
      <Button
        android:id="@+id/help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <Button
        android:id="@+id/main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:gravity="center">
      <Button
        android:id="@+id/bet1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bet_one_button_text"/>
      <Button
        android:id="@+id/bet_max_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bet_max_button_text"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:gravity="end">
      <Button
        android:id="@+id/deal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deal_button_text"/>
      <Button
        android:id="@+id/draw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/draw_button_text"/>
    </LinearLayout>

  </LinearLayout>

</LinearLayout>